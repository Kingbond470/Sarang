<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A68E6F"
    android:orientation="vertical"
    tools:context=".view.activity.PaymentOptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/small_logo"
            android:drawablePadding="20dp"
            android:fontFamily="@font/gotham_medium"
            android:text="Sarang"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/gotham_medium"
        android:text="Pay &amp; Enjoy the Premium Service"
        android:textColor="#F8F8F8"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pay_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:background="@drawable/circle_bg"
        android:drawableLeft="@drawable/large_rupee_icon"
        android:drawablePadding="4dp"
        android:fontFamily="@font/gotham_medium"
        android:padding="25dp"
        android:text="101"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D4F1F4"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_medium"
                android:text="Select Payment Method"
                android:textColor="#FB8C00"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_googlePay"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/form_bg"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/google_pay_logo" />

            <ImageView
                android:id="@+id/razorpay"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/form_bg"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/razorpay_logo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/form_bg"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/phonepe_logo" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/form_bg"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/paytm_logo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/form_bg"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/paypal_logo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/form_bg"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/debit_card_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_medium"
                android:text="* Select any card to continue"
                android:textColor="#FF3D00"
                android:textSize="15dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>